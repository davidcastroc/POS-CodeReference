<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

  <!-- Heredamos el template del recibo -->
  <t t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension">

    <!-- Reemplaza el nombre del producto por: REF - Nombre -->
    <xpath expr="//span[contains(@class,'product-name')]" position="replace">
      <span class="product-name">
        <t t-if="line.product_default_code">
          <t t-esc="line.product_default_code"/> - 
        </t>
        <t t-esc="line.product_name"/>
      </span>
    </xpath>

  </t>

</templates>